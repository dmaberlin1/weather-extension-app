{
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "allowJs": false,
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["vite/client", "node","vite-plugin-svgr/client"],
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "typeRoots": ["./src/global.d.ts"],
    /* Linting */
    "noImplicitAny": false,
    //    disables strict type checking for implicit types of any in TypeScript
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@pages/*": ["src/pages/*"],
      "virtual:reload-on-update-in-background-script": ["./src/global.d.ts"],
      "virtual:reload-on-update-in-view": ["./src/global.d.ts"],

    },
    "files": [
      "custom.d.ts"
    ]
  },
  "include": ["src", "utils", "vite.config.ts", "node_modules/@types"]
}
